{
  "name": "ui-src",
  "version": "1.0.0",
  "description": "",
  "license": "CC0-1.0",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "coverage": "jest --coverage",
    "test": "jest --setupFiles dotenv/config --",
    "watchTest": "jest --setupFiles dotenv/config --watch",
    "a11y": "pa11y --runner axe --runner htmlcs"
  },
  "dependencies": {
    "@chakra-ui/react": "2.10.6",
    "@chakra-ui/styled-system": "2.6.0",
    "@chakra-ui/toast": "2.1.0",
    "@cmsgov/design-system": "^13.0.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@vitejs/plugin-react": "^4.3.0",
    "aws-amplify": "^6.16.0",
    "core-js": "^3.41.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dompurify": "^3.2.4",
    "framer-motion": "^11",
    "html-react-parser": "^3.0.16",
    "jest": "^29.7.0",
    "launchdarkly-react-client-sdk": "^3.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^3.1.4",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "6.23.1",
    "sass": "^1.77.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.16.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^2.3.3",
    "@types/jest": "^27.0.2",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^24.10.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-helmet": "^6.1.11",
    "@types/react-router-dom": "^5.3.2",
    "babel-jest": "^26.6.3",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "pa11y": "^6.2.3",
    "pa11y-runner-htmlcs": "^2.0.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{ts,tsx}",
      "!src/components/index.ts*",
      "src/routes/**/*.{ts,tsx}",
      "!src/routes/index.tsx",
      "!src/types/index.ts*",
      "src/utils/**/*.{ts,tsx}",
      "!src/utils/testing/*",
      "!src/utils/index.ts*",
      "!src/utils/**/index.ts*"
    ],
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "text",
      "text-summary"
    ],
    "globals": {
      "_env_": {}
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a)$": "<rootDir>/src/utils/testing/mockAsset.ts",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [],
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/testing/setupJest.tsx"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(date-fns|date-fns-tz))"
    ],
    "verbose": true
  },
  "packageManager": "yarn@4.12.0"
}
